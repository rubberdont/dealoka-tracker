<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/default_actionbar</item>
        <item name="actionBarStyle">@style/default_actionbar</item>
    </style>

    <style name="default_actionbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/bg_trans</item>
        <item name="background">@color/bg_trans</item>
        <item name="titleTextStyle">@style/default_text_style</item>
    </style>

    <style name="default_text_style" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edt_theme" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/view_padding</item>
        <item name="android:textColorHint">@color/grey_cloud</item>
        <item name="android:textSize">@dimen/edt_size</item>
    </style>

    <style name="default_edt_theme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/tabs_text_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColorHint">@color/grey_cloud</item>

        <item name="android:textSize">@dimen/tabs_text_size</item>
    </style>


    <style name="btn_theme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>

        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/view_padding</item>
        <item name="android:paddingRight">@dimen/view_padding</item>

        <item name="android:clickable">true</item>
        <item name="android:textColorHint">@color/grey_cloud</item>
        <item name="android:textSize">@dimen/edt_size</item>
    </style>

    <style name="tv_tabs_theme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/tabs_text_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tabs_text_size</item>
    </style>


    <style name="tv_theme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/tabs_text_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/tabs_text_size</item>
    </style>

    <style name="tv_theme_medium" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/tabs_text_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

</resources>
